<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/docitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/specialization"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Dr. Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:layout_centerVertical="true"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/divider_fiat_list_horizontal"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Specialization"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/specialization"
        android:layout_below="@+id/specialization"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Area"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/divider_fiat_list_horizontal"
        android:layout_width="@dimen/separator_width"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/default_2x_padding_margin"
        android:layout_toLeftOf="@+id/btn_call"
        android:background="@color/target_black_4" />

    <ImageButton
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_selector"
        android:src="@android:drawable/sym_call_outgoing" />

</RelativeLayout>