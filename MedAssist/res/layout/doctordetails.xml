<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp" >

    <TextView
        android:id="@+id/doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Bhavn"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider_fiat_list_horizontal"
            android:text="+91 98338756"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector"
            android:contentDescription="Call"
            android:src="@android:drawable/sym_call_outgoing" />

        <View
            android:id="@+id/divider_fiat_list_horizontal"
            android:layout_width="@dimen/separator_width"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/default_2x_padding_margin"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/btn_call"
            android:background="@color/target_black_4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider_fiat_list_horizontal_2"
            android:text="+91 98338756"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/btn_call_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector"
            android:contentDescription="Call"
            android:src="@android:drawable/sym_call_outgoing" />

        <View
            android:id="@+id/divider_fiat_list_horizontal_2"
            android:layout_width="@dimen/separator_width"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/default_2x_padding_margin"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/btn_call_2"
            android:background="@color/target_black_4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider_fiat_list_horizontal_3"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="201, Surana regency, Sasmira Marg, Nr. Worli Bus Depot, Worli, Mumbai 30"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageButton
            android:id="@+id/btn_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_selector"
            android:contentDescription="Call"
            android:src="@android:drawable/ic_menu_camera" />

        <View
            android:id="@+id/divider_fiat_list_horizontal_3"
            android:layout_width="@dimen/separator_width"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/default_2x_padding_margin"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/btn_location"
            android:background="@color/target_black_4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/timmings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Timmings: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/btn_selector"
        android:text="Add Apppointment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialization"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/specialization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="some specializations."
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>